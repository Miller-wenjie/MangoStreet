<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--头部-->
    <LinearLayout
        android:id="@+id/is_ll_top"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/is_iv_back"
            android:layout_gravity="center"
            android:src="@drawable/page_clear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:contentDescription="关闭按钮"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="发布二手"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/page_done_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/is_iv_done"
            android:contentDescription="完成"
            />
    </LinearLayout>
    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_issue_76"
            android:id="@+id/is_item_image"
            android:background="@drawable/boundshape"
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginTop="25dp"
            android:text="所属分类"
            android:textSize="18sp"
            android:textColor="#212121"
            android:id="@+id/is_tv_category"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/is_sp_category"
            android:layout_width="340dp"
            android:layout_height="35dp">
        </Spinner>
        <TextView
            android:layout_marginTop="20dp"
            android:text="标题"
            android:textSize="18sp"
            android:textColor="#212121"
            android:id="@+id/is_tv_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/is_et_title"
            android:inputType="text"
            android:textColorHint="#757575"
            android:textColor="#757575"
            android:gravity="left|top"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="价格"
            android:textSize="18sp"
            android:textColor="#212121"
            android:id="@+id/is_tv_price"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:gravity="left|top"
            android:textColorHint="#757575"
            android:textColor="#757575"
            android:id="@+id/is_et_price"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="地点"
            android:textColor="#212121"
            android:textSize="18sp"
            android:id="@+id/is_tv_address"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="text"
            android:textColorHint="#757575"
            android:textColor="#757575"
            android:gravity="left|top"
            android:layout_gravity="center"
            android:id="@+id/is_et_address"
            android:layout_width="340dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="描述"
            android:textSize="18sp"
            android:textColor="#212121"
            android:id="@+id/is_tv_description"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColorHint="#757575"
            android:textColor="#757575"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:layout_gravity="center"
            android:minLines="6"
            android:id="@+id/is_et_description"
            android:layout_width="340dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>