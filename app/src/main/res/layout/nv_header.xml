<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:im="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/ll_nvheader"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@color/colorPrimary"
    android:layout_height="180dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:id="@+id/iv_user"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@mipmap/head_loading_image"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"/>
    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_onlineusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="funnyzhao"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:padding="9dp"
        />

    <TextView
        android:id="@+id/tv_identification"
        android:padding="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号认证(已认证)"
        android:textSize="14sp"
        android:textColor="#fff"
        />
        <TextView
            android:id="@+id/tv_tologin"
            android:padding="9dp"
            android:text="未登录"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>